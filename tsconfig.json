{
    "compilerOptions": {
        "target": "esnext",  // Or a suitable target for your environment
        "module": "esnext", // Align with Bun's module resolution
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "resolveJsonModule": true,
    },
    "include": ["src/**/*"],
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"]
    }
}